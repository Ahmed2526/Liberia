@model Category
<tr>
    <td>@Model.Name</td>
    <td>
        <span class="badge rounded-pill text-bg-@(Model.IsActive ? "success" : "danger") js-toggle-badge">
            @(Model.IsActive ? "Available" : "Deleted")
        </span>
    </td>
    <td>@Model.CreatedOn</td>
    <td class="js-modified-on">@Model.ModifiedOn</td>
    <td>
        <button type="button" class="btn btn-icon btn-color-muted btn-active-light-primary" data-kt-menu-trigger="hover" data-kt-menu-placement="bottom-end">
            <!--begin::Svg Icon | path: icons/duotune/general/gen024.svg-->
            <span class="svg-icon svg-icon-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                </svg>
            </span>
            <!--end::Svg Icon-->
        </button>
        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="">
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a class="menu-link px-3 js-modal" href="javascript:;" data-title="Edit Category" data-update="true" data-url="/Categories/Edit/@Model.Id">
                    Edit
                </a>
            </div>
            <!--end::Menu item-->
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a class="menu-link flex-stack px-3 js-toggle-delete" href="javascript:;" data-id="@Model.Id">
                    Delete
                </a>
            </div>
            <!--end::Menu item-->
        </div>
    </td>
</tr>