@model IEnumerable<Author>

@{
    ViewData["Title"] = "Authors";
}

@section CustomStyles{
    <link rel="stylesheet" href="~/lib/datatables/datatables.bundle.css" />
}

<div class="card card-custom">
    <div class="card-header ps-3">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <div class="symbol symbol-40px me-3">
                <div class="symbol-label fs-2 fw-semibold">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen002.svg-->
                    <span class="svg-icon svg-icon-2 svg-icon-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                </div>
            </div>
            <h2 class="card-label">Authors</h2>
        </div>
        <div class="card-toolbar">
            <a href="javascript:;" class="btn btn-md btn-primary font-weight-bold js-modal" data-title="Add Author" data-url="/Authors/Create">
                <i class="bi bi-plus-circle me-1"></i>Add
            </a>
        </div>
    </div>

    <div class="card-body" id="DataTable_wrapper">
        @if (!Model.Any())
        {
            <div class="alert alert-warning pb-2" role="alert">
                <h4 class="pt-1">No Authors Found!</h4>
            </div>
        }
        else
        {
            <div class="card-title">
                <div class="d-flex align-items-center position-relative my-1">
                    <span class="svg-icon svg-icon-1 position-absolute ms-4">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                            <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                        </svg>
                    </span>
                    <input type="text" id="search" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Search by Author name..." />
                </div>
            </div>

            <table class="table gy-2 align-middle" style="font-size:1.2rem;" id="DataTable">
                <thead>
                    <tr style="font-weight:600">
                        @*class="pe-2"*@
                        <th>Name</th>
                        <th>IsActive</th>
                        <th>CreatedOn</th>
                        <th>ModifiedOn</th>   
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <partial name="_AuthorRow" model="item" />
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@Html.AntiForgeryToken()

@section CustomScripts{
    <script src="~/lib/datatables/datatables.bundle.js"></script>
}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/authors.js" asp-append-version="true"></script>
}