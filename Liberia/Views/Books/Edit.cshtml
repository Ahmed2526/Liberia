@model BookVM

@{
    ViewData["Title"] = "Books";
}

<div class="card card-custom">
    <div class="card-header ps-3">
        <div class="card-title">
            <h3 class="card-label ms-5 fs-3">Edit Book</h3>
        </div>
    </div>
    <div class="card-body">
        <form asp-controller="Books" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" placeholder="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AuthorId" class="form-label"></label>
                        <select data-control="select2" data-placeholder="Select Author" class="form-select" asp-for="AuthorId" asp-items="@Model.Authors">
                            <option value="">Select Author</option>
                        </select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" accept=".jpg,.jpeg,.png"
                               onchange="document.getElementById('js-Img').src=window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedCategories" class="form-label"></label>
                        <select data-control="select2" data-placeholder="Select Categories" class="form-select" asp-for="SelectedCategories" asp-items="@Model.Categories">
                        </select>
                        <span asp-validation-for="SelectedCategories" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Publisher" class="form-label"></label>
                        <input asp-for="Publisher" class="form-control" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                    <div class="form-check form-switch mt-5 mb-5">
                        <label asp-for="IsAvailableForRental" class="form-check-label"></label>
                        <input type="checkbox" asp-for="IsAvailableForRental" class="form-check-input" />
                        <span asp-validation-for="IsAvailableForRental" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Hall" class="form-label"></label>
                        <input asp-for="Hall" class="form-control" />
                        <span asp-validation-for="Hall" class="text-danger"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="PublishingDate" class="form-label"></label>
                        <input type="date" asp-for="PublishingDate" class="form-control" />
                        <span asp-validation-for="PublishingDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-1">
                </div>
                <div class="col">
                    <div class="col-1 mb-3">
                        <img src="~/Images/Books/@Model.ImagePath" id="js-Img" class="image-input-wrapper w-200px h-250px" />
                    </div>

                    <div class="col-9 mt-5">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea id="kt_docs_tinymce_basic" asp-for="Description" class="tox-target">
                        </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section CustomScripts{
    <script src="~/assets/plugins/tinymce/tinymce.bundle.js"></script>
}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        //TinyMce Start
        var options = { selector: "#kt_docs_tinymce_basic", height: "328" };
        if (KTThemeMode.getMode() === "dark") {
            options["skin"] = "oxide-dark";
            options["content_css"] = "dark";
        }
        tinymce.init(options);
            //TincyMce End
    </script>
}
