@model BookVM

@{
    ViewData["Title"] = "Books";
}

<div class="card card-custom">
    <div class="card-header ps-3">
        <div class="card-title">
            <h2 class="card-label">Add Book</h2>
        </div>
    </div>
    <div class="card-body">
        <form asp-controller="Books" asp-action="Create" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-4 mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" placeholder="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class=" col-4 mb-3">
                    <label asp-for="AuthorId" class="form-label"></label>
                    <select class="form-select" asp-for="AuthorId" asp-items="@Model.Authors">
                        <option value="">Select Author</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class=" col-4 mb-3">
                    <label asp-for="SelectedCategories" class="form-label"></label>
                    <select class="form-select" asp-for="SelectedCategories" asp-items="@Model.Categories">
                    </select>
                    <span asp-validation-for="SelectedCategories" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4 mb-3">
                    <label asp-for="Publisher" class="form-label"></label>
                    <input asp-for="Publisher" class="form-control" />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4 mb-3">
                    <label asp-for="PublishingDate" class="form-label"></label>
                    <input type="date" asp-for="PublishingDate" class="form-control" />
                    <span asp-validation-for="PublishingDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4 mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4 mb-3">
                    <label asp-for="Hall" class="form-label"></label>
                    <input asp-for="Hall" class="form-control" />
                    <span asp-validation-for="Hall" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-check mb-3">
                    <label asp-for="IsAvailableForRental" class="form-check-label"></label>
                    <input type="checkbox" asp-for="IsAvailableForRental" class="form-check-input" />
                    <span asp-validation-for="IsAvailableForRental" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4 mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
