@model SubscriberSearchVM

@{
    ViewData["Title"] = "Subscribers";
}

<div class="card card-custom">
    <div class="card-header ps-3">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <div class="symbol symbol-40px me-3">
                <div class="symbol-label fs-2 fw-semibold text-success">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen002.svg-->
                    <span class="svg-icon svg-icon-2 svg-icon-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                </div>
            </div>
            <h2 class="card-label">Subscribers</h2>
        </div>
        <div class="card-toolbar">
            <a asp-action="Create" class="btn btn-md btn-primary font-weight-bold">
                <i class="bi bi-plus-circle me-1"></i>Add
            </a>
        </div>
    </div>
    <div class="card-title ms-5 mt-5">
        <form asp-controller="Subscribers" asp-action="Search"
              data-ajax-method="post"
              data-ajax="true"
              data-ajax-begin="onModalBegin"
              data-ajax-update="#Result"
              data-ajax-failure="onModalfailure"
              data-ajax-complete="onModalFinish">
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-4">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                        <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                    </svg>
                </span>
                <input type="text" asp-for="value" class="form-control form-control-solid w-350px ps-14" placeholder="Search by email ,Phone or National ID ..." />
                <button type="submit" class="btn btn-light-primary ms-2">
                    <span class="indicator-label">Search</span>
                    <span class="indicator-progress">
                        Please wait... <span class="spinner-border spinner-border-sm align-middle"></span>
                    </span>
                </button>
            </div>
        </form>
    </div>
        <div class="card-body" id="Result"></div>
</div>
@Html.AntiForgeryToken()
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


