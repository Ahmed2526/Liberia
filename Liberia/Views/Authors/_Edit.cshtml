@model AuthorVM

<form asp-action="Edit" data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="onModalfailure"
      data-ajax-complete="onModalFinish">

    <input type="hidden" class="form-control" asp-for="Id">

    <div class="form-floating mb-5 col-8">
        <input type="text" class="form-control form-control-solid" placeholder="Name" asp-for="Name" />
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <partial name="_ModalFotter" />
</form>
