@{
    ViewData["Title"] = "Books";
}

@section CustomStyles{
    <link rel="stylesheet" href="~/lib/datatables/datatables.bundle.css" />
}

<div class="card card-custom">
    <div class="card-header ps-3">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <div class="symbol symbol-40px me-3">
                <div class="symbol-label fs-2 fw-semibold">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen002.svg-->
                    <span class="svg-icon svg-icon-2 svg-icon-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book-fill" viewBox="0 0 16 16">
                            <path d="M8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                </div>
            </div>
            <h2 class="card-label">Books</h2>
        </div>
        <div class="card-toolbar">
            <a asp-controller="Books" asp-action="Create" class="btn btn-md btn-primary font-weight-bold">
                <i class="bi bi-plus-circle me-1"></i>Add
            </a>
        </div>
    </div>

    <div class="card-body" id="DataTable_wrapper">

        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-4">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                        <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                    </svg>
                </span>
                <input type="text" id="search" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Search by title or author..." />
            </div>
        </div>

        <table class="table gy-4 align-middle" style="font-size:1.2rem;" id="BooksTable">
            <thead>
                <tr style="font-weight:600">
                    <th>#</th>
                    <th>Book</th>
                    <th>Publisher</th>
                    <th>Hall</th>
                    <th>AddedOn</th>
                    <th>Categories</th>
                    <th>status</th>
                    <th>Rental</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

@Html.AntiForgeryToken()

@section CustomScripts{
    <script src="~/lib/datatables/datatables.bundle.js"></script>
    <script src="~/assets/plugins/fslightbox/fslightbox.bundle.js"></script>
}
@section Scripts{
    <script src="~/js/books.js" asp-append-version="true"></script>
}