@page
@model LoginModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<!--Prevent User From Going back after logged in-->
<head>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
</head>

@if (!SignInManager.IsSignedIn(User))
{
    <!--begin::Main-->
    <form id="account" method="post">
        <div class="d-flex flex-column flex-root">
            <!--begin::Authentication - Sign-in -->
            <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url(/assets/images/14.png)">
                <!--begin::Content-->
                <div class="d-flex flex-center flex-column flex-column-fluid p-9 pb-lg-20">
                    <!--begin::Logo-->
                    <a href="/" class="mb-8">
                        <img alt="Logo" src="~/assets/images/logo.png" class="h-70px" />
                    </a>
                    <!--end::Logo-->
                    <!--begin::Wrapper-->
                    <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
                        <!--begin::Form-->
                        <!--begin::Heading-->
                        <div class="text-center mb-10">
                            <!--begin::Title-->
                            <h1 class="text-dark mb-3">Sign In to Liberia</h1>
                            <!--end::Title-->
                            <!--begin::Link-->
                            <div class="text-gray-400 fw-bold fs-4">
                                New Here?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary fw-bolder">Create an Account</a>
                            </div>
                            <!--end::Link-->
                        </div>

                        <!--begin::Heading-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-10">
                            <!--begin::Label-->
                            <label class="form-label fs-6 fw-bolder text-dark">Email or UserName</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input class="form-control form-control-lg form-control-solid" asp-for="Input.Email" aria-required="true" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <!--end::Input-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-10">
                            <!--begin::Wrapper-->
                            <div class="d-flex flex-stack mb-2">
                                <!--begin::Label-->
                                <label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
                                <!--end::Label-->
                                <!--begin::Link-->
                                <a id="forgot-password" asp-page="./ForgotPassword" class="link-primary fs-6 fw-bolder">Forgot Password ?</a>
                                <!--end::Link-->
                            </div>
                            <!--end::Wrapper-->
                            <!--begin::Input-->
                            <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" class="form-control form-control-lg form-control-solid" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>

                            <div asp-validation-summary="ModelOnly" class="text-danger mt-4"></div>
                            <!--end::Input-->
                        </div>
                        <div class="fv-row mb-10">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Actions-->
                        <div class="text-center">
                            <!--begin::Submit button-->
                            <button type="submit" id="login-submit" class="btn btn-lg btn-primary w-100 mb-5">
                                <span class="indicator-label">Continue</span>
                                <span class="indicator-progress">
                                    Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                            <!--end::Submit button-->
                            <!--begin::Separator-->
                            <div class="text-center text-muted text-uppercase fw-bolder mb-5">or</div>
                            <!--end::Separator-->
                            <!--begin::Google link-->
                            @*asp-page="./ExternalLogin"*@
                            <form id="external-account"  asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" disabled class="btn btn-flex flex-center btn-light btn-lg w-100 mb-5" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><img alt="Logo" src="~/assets/images/google-icon.svg" class="h-20px me-3" />Continue with @provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>

                            <!--end::Google link-->
                        </div>
                        <!--end::Actions-->
                        <!--end::Form-->
                    </div>
                    <div class="d-flex align-items-center fw-bold fs-6 mt-5">
                        <a href="#" class="text-muted text-hover-primary px-2">About</a>
                        <a href="#" class="text-muted text-hover-primary px-2">Contact</a>
                        <a href="#" class="text-muted text-hover-primary px-2">Contact Us</a>
                    </div>
                    <!--end::Wrapper-->
                </div>
            </div>
            <!--end::Authentication - Sign-in-->
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
